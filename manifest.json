{
  "manifest_version": 3,
  "name": "CanvasGradesPro",
  "description": "Extension for making improvements to Canvas grades",
  "version": "1.0.1",
  "action": {
    "default_icon": "logo.png",
    "default_title": "Settings",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content_script.js"],
      "css": ["modal.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage","unlimitedStorage"]
}