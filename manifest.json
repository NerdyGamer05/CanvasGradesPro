{
  "manifest_version": 3,
  "name": "CanvasGradesPro",
  "description": "Enhance your Canvas experience with features designed to simplify grade tracking and improve your academic performance",
  "version": "1.0.8",
  "action": {
    "default_icon": "logo.png",
    "default_title": "Settings",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content_script.js"],
      "css": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage","unlimitedStorage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "{8323d93c-4613-4f7b-946f-a842dc567a9d}"
    }
  }
}